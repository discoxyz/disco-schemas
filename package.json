{
  "name": "disco-schemas",
  "description": "JSON Schema schemas for Verifiable Credentials",
  "author": "Disco",
  "homepage": "https://disco.xyz",
  "repository": "discoxyz/disco-schemas",
  "version": "1.5.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "yarn clean && yarn generate && tsc",
    "watch": "yarn clean && yarn generate && tsc -w",
    "clean": "rimraf dist/",
    "generate": "yarn generate-latest-symlinks && yarn generate-json",
    "generate-json": "ts-node src/generate-json.ts",
    "generate-latest-symlinks": "ts-node src/generate-latest-symlinks.ts",
    "prettier": "prettier --config .prettierrc.yaml --write --list-different './**/*.{ts,tsx,json,md}'",
    "prettier:fix": "prettier --config .prettierrc.yaml '**/*.{ts,tsx,json,md}' --write",
    "prettier:lint": "prettier --config .prettierrc.yaml --list-different './**/*.{ts,tsx,json,md}'",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint ./src --ext .ts,.tsx --fix",
    "test": "jest",
    "publish-if-new-version": "if [ \"$(npm view disco-schemas@$npm_package_version)\" ]; then echo \"Version $npm_package_version already published\"; else npm publish; fi",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@sindresorhus/slugify": "^2.1.0",
    "ajv": "^8.7.1",
    "ajv-formats": "^2.1.1",
    "cross-fetch": "^3.1.4",
    "typescript": "^4.1.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.13.15",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-typescript": "^7.13.0",
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@semantic-release/changelog": "^6.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.2",
    "@types/jest": "^26.0.22",
    "@types/json-schema": "^7.0.11",
    "@types/node": "^14.14.22",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-jest": "^26.6.3",
    "dotenv": "^16.0.3",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^8.0.3",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "json-canonicalize": "^1.0.4",
    "lint-staged": "^13.2.1",
    "prettier": "2.2.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.5",
    "semantic-release-slack-bot": "3.5.3",
    "ts-jest": "^26.5.5",
    "ts-node": "^10.8.0"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "yarn lint:fix",
      "yarn prettier:fix"
    ]
  }
}
